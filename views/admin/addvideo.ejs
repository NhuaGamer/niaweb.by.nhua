<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Add Video Page</title>
  <link rel="icon" href="/img/logoNIA.jpg">
  <!-- Include SweetAlert2 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <!-- Include SweetAlert2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/main.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <%-include('components/nav')%>
  <main class="container mt-3 mb-3">
    <% if (typeof admin !== 'undefined') {
      %>
      <h1 class="text-center">Welcome to add video page</h1>
      <hr>
      <% if (typeof succ !== 'undefined') {
        %>
        <div class="alert alert-success">
          <h4 class="text-center"><%=succ%></h4>
        </div>
        <hr>
        <%
      } %>
      <% if (typeof err !== 'undefined') {
        %>
        <div class="alert alert-danger">
          <h4 class="text-center"><%=err%></h4>
        </div>
        <hr>
        <%
      } %>
      <form action="/admin/addvideo" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Title</label>
          <input type="text" name="title" class="form-control" id="exampleInputEmail1" required>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">URL Video</label>
          <input type="url" name="url" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Comment Video</label>
          <input type="text" name="comment" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Link1</label>
          <input type="text" name="Tlink1" class="form-control mb-2" placeholder="Enter your name link" id="exampleInputPassword1" >
          <input type="url" name="link1" class="form-control" placeholder="Enter your link" id="exampleInputPassword1" >
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Link2</label>
          <input type="text" name="Tlink2" class="form-control mb-2" placeholder="Enter your name link" id="exampleInputPassword1" >
          <input type="url" name="link2" class="form-control" placeholder="Enter your link" id="exampleInputPassword1" >
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Link3</label>
          <input type="text" name="Tlink3" class="form-control mb-2" placeholder="Enter your name link" id="exampleInputPassword1" >
          <input type="url" name="link3" class="form-control" placeholder="Enter your link" id="exampleInputPassword1" >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <hr>
      <form action="/deleteName" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Title Video</label>
          <input type="text" name="titleD" class="form-control" required>
        </div>
        <div class="mb-3">
          <button class="btn btn-danger">Delete</button>
        </div>
      </form>
      <form action="/deleteAll" method="post">
        <div class="mb-3">
          <button class="btn btn-danger">DeleteAll</button>
        </div>
      </form>
      <%
    } else {
      %>
      <h1 class="text-center">Hello, Admin</h1>
      <p class="text-center">
        Please <a href="/loginAdmin">Login</a>.
      </p>
      <%
    } %>
  </main>
  <%-include('components/footer')%>
  
  <script src="/js/SweetAlert.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>